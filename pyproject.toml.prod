[build-system]
requires = ["setuptools", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "ai-chat"
version = "0.1.1"
description = "AI Chat Application with Memory"
authors = [{ name = "MaxSummerX" }]
requires-python = ">=3.13"

dependencies = [
    "aiofiles>=25.1.0",
    "alembic>=1.17.0",
    "asyncpg>=0.30.0",
    "backoff>=2.2.1",
    "bcrypt>=5.0.0",
    "email-validator>=2.3.0",
    "fastapi>=0.120.0",
    "greenlet>=3.2.4",
    "langchain-neo4j>=0.6.0",
    "loguru>=0.7.3",
    "mem0ai>=1.0.1",
    "ollama>=0.6.0",
    "openai>=2.6.1",
    "pydantic>=2.12.3",
    "pydantic-settings>=2.12.0",
    "pyjwt>=2.10.1",
    "python-dotenv>=1.2.1",
    "python-multipart>=0.0.20",
    "rank-bm25>=0.2.2",
    "redis>=7.1.0",
    "sqlalchemy[asyncio]>=2.0.44",
    "tenacity>=9.1.2",
    "uvicorn[standard]>=0.38.0",
]
